                </div>
                <section class="oe_snippet_body fw_categories">
                    <div class="container">
                        <div class="row">


                            <div id="person_DIV_1">
                                <div id="person_DIV_2" class="col-md-4">
                                    <img src="/theme_capital/static/src/img/pictures/img_3.png" alt="" id="person_IMG_3"/>
                                </div>
                                <div id="person_DIV_4" class="col-md-8">
                                    <!-- attorney 1 name -->

                                    <div id="person_DIV_5">
